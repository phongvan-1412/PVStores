@model IEnumerable<Category>

@{
    ViewData["Title"] = "List of Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*Write Code*@
<!-- ======= Header ======= -->
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.SubCate)</th>
                <th>Action</th>
            </tr>

        <tbody>
                @foreach (var item in ViewData["Category"] as IEnumerable<Category>)
                {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(m => item.ID)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.Name)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.Status)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.SubCate)</td>

                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-outline-info"><i class="fa-thin fa-square-info"></i>Detail</a>
                    </td>
                </tr>
                }

        </tbody>

        </thead>
    </table>
</div>

<div class="text-white">
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">
        Add New
    </a>
</div>
