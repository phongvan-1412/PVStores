@model IEnumerable<Category>

@{
    ViewData["Title"] = "List of Category";
    var cateList = (List<Category>)ViewData["Categories"];
    var cate = (Category)ViewData["Cate"];
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*Write Code*@
<div class="row mt-5">
    <div class="col-md-10 offset-1">
        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th class="align-middle p-2">Index</th>
                    <th class="align-middle p-2">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="align-middle p-2">@Html.DisplayNameFor(model => model.Status)</th>
                    <th class="align-middle p-2">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in cateList)
                {
                    <tr>
                        <td class="align-middle p-2">
                            @{
                                var index = cateList.IndexOf(item) + 1;
                            }@index
                        </td>
                        <td class="align-middle p-2">@Html.DisplayFor(m => item.Name)</td>
                        <td class="align-middle p-2">@Html.DisplayFor(m => item.Status)</td>

                        <td class="align-middle p-2">
                            @Html.Partial("~/Areas/Admin/Views/Partials/Category/_UpdateCategoryPartial.cshtml", item)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="col-md-10 offset-1">
    @Html.Partial("~/Areas/Admin/Views/Partials/Category/_CreateCategoryPartial.cshtml", cate)
</div>
