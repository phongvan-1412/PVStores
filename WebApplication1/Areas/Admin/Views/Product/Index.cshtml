@model ProductIndexViewModels
@{
    ViewData["Title"] = "List of Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*Write Code*@
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Status</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td class="align-middle">@item.ID</td>
                    <td class="align-middle">@item.Name</td>

                    @foreach (var cateId in Model.Categories)
                    {
                        if (cateId.ID == item.ID)
                        {
                            <td>@cateId.Name</td>
                        }
                    }

                    <td class="align-middle">$@item.Price</td>
                    <td class="align-middle text-danger">@Model.ConvertEnum(item.Status)</td>
                    <td class="align-middle">@item.Image</td>

                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-outline-info"><i class="fa-thin fa-square-info"></i>Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-white">
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success">
        Add New
    </a>
</div>
