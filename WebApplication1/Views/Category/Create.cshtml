@model Category
@{
    ViewData["Title"] = "Add Category";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add new Category</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="cate_name" class="form-label"></label>
                        <input asp-for="cate_name" class="form-control" />
                        <span asp-validation-for="cate_name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="cate_status" class="form-label"></label>
                        <input type="checkbox" asp-for="cate_status" />
                        <span asp-validation-for="cate_status" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="sub_cate" class="form-label"></label>
                        @*<select asp-for="sub_cate">
                        <option></option>
                        </select>*@
                        <input asp-for="sub_cate" class="form-control" />
                        <span asp-validation-for="sub_cate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>