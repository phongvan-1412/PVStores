@model List<ProductViewModels>

@foreach (var item in Model)
{
    <div class="me-5 mb-5 col-lg-3 col-md-4 col-sm-6">
        <div class="card d-flex flex-column align-items-center p-3" style="background: white; border: none; width: 100%; height: 18rem">
            <img src="@item.ProductImageBase64" class="card-img-top mb-3" alt="@item.ProductImage" style="width: 10rem; height: 10rem">
            <h5 class="card-title">@item.ProductName</h5>

            <div class="d-flex align-items-center justify-content-between">
                <a style="font-size: 16px">@item.CateName</a>
                <span class="ms-3 text-danger fw-semibold" style="font-size: 16px;">$@item.ProductPrice</span>
            </div>
        </div>
    </div>
}